@import "./normalize.css"
base-color = white
font-color = #4a4a4a

*
  box-sizing border-box

html
  font-size 1.25em
  height 100%
  @media (min-width: 500px)
    font-size 1.5em
  @media (min-width: 800px)
    font-size 2em

body
  background-color base-color
  font-family "Fira Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight 400
  line-height 1.45
  color #4a4a4a
  padding 5% 5% 0
  min-height 100%
  position relative

p
  margin-bottom 1.3em

h1, h2, h3, h4
  margin 1.414em 0 0.5em
  font-weight inherit
  line-height 1.2

h1
  margin-top 0
  font-size 6.854em
  font-weight 400

h2
  font-size 4.236em

h3
  font-size 2.618em

h4
  font-size 1.618em

small, .font_small
  font-size 0.7em

.font_mono
  font-family monospace
  background font-color
  padding 0 0.3em
  color base-color

a:link, a:visited, a:active
  text-decoration none
  color blue
  display inline-block
  position relative
  border-bottom 0.15em dashed transparent
  i
    font-size 0.7em
    position absolute
    right -0.5em
    top -1.1em
    display none
    padding 0.5em
    background red
    border-radius 10%
    color base-color
    box-shadow 3px -3px 0 darken(red, 20%)
    z-index -1
  &:hover
    border-bottom-color lighten(blue, 25%)
    i
      display block

section {
  max-width 760px
  margin auto
}

.hero
  h1
    font-size 2em
    font-weight bold
  h2
    font-size 1.6em
  // a
  //   border-bottom 5px solid transparent
  //   &:hover
  //     border-bottom-color blue

.avatar
  border-radius 100%
  border 0.1em solid
  width 60px
  margin-bottom 3em
  margin-right 3em
  @media (min-width: 800px)
    width 120px


.social
  list-style none
  margin 0 0 2em
  padding 0
  li
    width 32%
    margin-bottom 0.5em
    display inline-block
