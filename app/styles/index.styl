@import "./normalize.css"

*
  box-sizing border-box

html
  font-size 1.25em
  height 100%
  @media (min-width: 500px)
    font-size 1.5em
  @media (min-width: 800px)
    font-size 2em

body
  background-color lemonchiffon
  font-family "Fira Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight 400
  line-height 1.45
  color rgba(0,0,0,0.85)
  padding 5%
  min-height 100%
  position relative
  letter-spacing: -0.02em

p
  margin-bottom 1.3em

h1, h2, h3, h4
  margin 1.414em 0 0.5em
  font-weight inherit
  line-height 1.2

h1
  margin-top 0
  font-size 6.854em
  font-weight 400

h2
  font-size 4.236em

h3
  font-size 2.618em

h4
  font-size 1.618em

small, .font_small
  font-size 0.7em

.font_mono
  font-family monospace
  background darken(#30374F, 3)
  padding 0 0.3em
  color lemonchiffon

a:link, a:visited, a:active
  text-decoration none
  color tomato
  display inline-block
  position relative
  border-bottom 2px solid transparent
  i
    font-size 0.8em
    position absolute
    right -1em
    top -1em
    display none
    padding 0.5em
    background aquamarine
    border-radius 10%
    color lemonchiffon
    z-index -1
a:hover
  border-bottom 2px solid
  i
    display block

section {
  max-width 900px
  margin auto
}

.hero
  h1
    font-size 2em
    font-weight bold
  h2
    font-size 1.6em

.avatar
  border-radius 100%
  border 0.1em solid
  width 60px
  margin-bottom 3em
  margin-right 3em
  @media (min-width: 800px)
    width 120px


.social
  list-style none
  margin 0 0 2em
  padding 0
  li
    width 32%
    margin-bottom 0.5em
    display inline-block
